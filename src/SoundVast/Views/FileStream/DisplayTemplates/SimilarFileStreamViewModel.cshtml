@model SimilarFileStreamViewModel

<div class="col-md-2">
    <div class="audio-wrapper">
        <div class="poster-wrapper tint">
            <img src="@Model.ImageViewModel.ImagePath" alt="Similar Audio" class="cover-image" data-url="@Url.Action("FileStream", new { id = Model.Id, fileStreamName = Model.Name.ToUrlFriendlyString() })" />
        </div>
        <p>
            <span class="fileStream-name side-bar-text">
                <label asp-for="Name"></label>
            </span>
            <br />
            <span class="artist-name side-bar-text">
                <label asp-for="Artist"></label>
            </span>
        </p>
    </div>
</div>