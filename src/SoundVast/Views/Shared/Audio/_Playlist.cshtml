@model PlaylistViewModel

<a asp-action="Profile"  asp-controller=="User" class="cover-image single-image" style="width: 50px; height: 50px;">
    <img src="@Model.ImageViewModel.ImagePath" alt="@Model.Name Playlist" class="cover-image genre-image" title="Name" data-url="@Url.Action("FileStreams", new { id = Model.Id, fileStreamName = Model.Name.ToUrlFriendlyString() })" />
</a>
<label asp-for="Name"></label>
<label asp-for="UserName"></label>
<a asp-action="Profile" asp-controller="User">
    Your playlists
</a>