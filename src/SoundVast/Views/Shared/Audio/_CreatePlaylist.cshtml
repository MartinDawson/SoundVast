@model CreatePlaylistViewModel

<form asp-action="CreatePlaylist" asp-controller="Audio" class="form-horizontal" role="form">
    <div id="playlist-form-content">
        @Html.AntiForgeryToken()

        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>

        <label asp-for="SelectedGenreIds"></label>
        <select asp-for="SelectedGenreIds" asp-items="@Model.GenresSelectList" class="form-control genres" multiple="Multiple"></select>
        <span asp-validation-for="SelectedGenreIds" class="text-danger"></span>

        <input type="submit" class="btn btn-1" value="Save" />
    </div>
    <input type="hidden" asp-for="AudioViewModel.Id" />
    <img src="@Model.AudioViewModel.ImagePath" alt="Playlist" class="cover-image single-image" style="width: 50px; height: 50px;" title="Playlist" />
    <label asp-for="AudioViewModel.Name"></label>
    <label asp-for="AudioViewModel.Artist"></label>
</form>