@model EditCommentViewModel

<form asp-action="Edit" method="post" class="edit">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="resize-container">
        <textarea asp-for="Body" maxlength="300" cols="7" rows="38" class="resize"></textarea>
        <div class="text-copy"></div>
    </div>

    <input type="submit" class="btn btn-1" value="Edit" />
    <input type="button" class="btn btn-1" value="Cancel" />
</form>