@model ReplyCommentViewModel

<form asp-action="Reply" method="post" class="reply">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="OriginalCommentId" hidden />

    <div class="resize-container">
        <textarea asp-for="Body" maxlength="300" cols="7" rows="38" class="resize"></textarea>
        <div class="text-copy"></div>
    </div>

    <input type="submit" class="btn btn-1" value="Reply" />
    <input type="button" class="btn btn-1" value="Cancel" />
</form>