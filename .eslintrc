{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "extends": "airbnb",
  "rules": {
    "react/wrap-multilines": "off",
    "react/require-extension":  "off",
	"import/no-extraneous-dependencies": ["error", { "devDependencies": [
	  "**/*.spec.*{js,jsx}"
	] }]
  },
  "plugins": [
    "react"
  ]
}